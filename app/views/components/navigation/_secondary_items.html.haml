- items.each do |n|
  - active = 'is-current' if n[:current]

  - if n[:submenu]
    .nav__item.nav__submenu__trigger.js-secondary-nav-submenu
      - if n[:slug]
        %a.nav__item.nav__item--secondary.nav__item--submenu.js-nav-item{ class: [active, n[:name]], href: n[:slug], aria: { label: (n[:current] ? "Current page" : nil) } }<
          %i.nav__icon{ class: n[:icon_class] }
          = n[:title]
      - else
        %span.nav__item.nav__item--submenu
          = n[:title]

      .nav__submenu__trigger--responsive.wv--hidden.js-toggle-active{ data: { toggle_target: ".js-secondary-nav-submenu", toggle_class: "is-visible", toggle_me: "true" } }
        %div.nav__submenu__trigger--icon.icon--chevron-down.icon--body-grey
        %div.nav__submenu__trigger--icon.icon--chevron-up.icon--body-grey

      .nav__submenu.nav__submenu--secondary{ class: "nav__submenu--#{n[:title].downcase.gsub(' ', '-')}"}
        .nav--stacked.nav__submenu__content.nav__submenu--secondary__content.js-submenu.icon--tapered-arrow-up--after.icon--white--after
          - n[:submenu].each do |sub|
            %a.js-nav-item{ href: sub[:slug], class: "nav__item nav__submenu__item nav__submenu__link nav__submenu__item--secondary", itemprop: "url"}<
              %div{itemprop: "name", class: "nav__submenu__item--secondary__icon #{sub[:icon_class] ? sub[:icon_class] : ''}" }
                = sub[:title]
  - else
    %a.nav__item.nav__item--secondary.js-nav-item{ class: [active, n[:name]], href: n[:slug], itemprop: "url", aria: { label: (n[:current] ? "Current page" : nil) } }<
      %span{itemprop: "name"}
        = n[:title]
